# lock
#bindsym $mod+Control+l exec i3lock --color 475263
bindsym Control+Mod1+l exec "xautolock -locknow"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $Lock  xautolock -locknow && sleep 1

#Power control with keys
set $mode_sys [l]ogout, [s]uspend, [r]eboot, [P]oweroff

mode "$mode_sys" {
        # Power commands
        bindsym l exec --no-startup-id i3-msg exit, mode "default"
        bindsym Shift+p exec --no-startup-id systemctl poweroff, mode "default"
        bindsym s exec --no-startup-id $Lock && systemctl suspend, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"

        # Return to normal mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
#Enter power mode
bindsym $mod+Shift+p mode "$mode_sys"

#Add a monitor mode
set $mode_monitor Add monitor [h] left, [j] below, [k] above, [l] right, [d]uplicate, [x] disconnect

mode "$mode_monitor" {
#Add the monitor
        bindsym h exec --no-startup-id "xrandr --output HDMI1 --auto --left-of eDP1", mode "default"
        bindsym j exec --no-startup-id "xrandr --output HDMI1 --auto --below eDP1", mode "default"
        bindsym k exec --no-startup-id "xrandr --output HDMI1 --auto --above eDP1", mode "default"
        bindsym l exec --no-startup-id "xrandr --output HDMI1 --auto --right-of eDP1", mode "default"
        bindsym d exec --no-startup-id "xrandr --output HDMI1 --auto --same-as eDP1", mode "default"
        bindsym x exec --no-startup-id "xrandr --output HDMI1 --off"

        # Return to normal mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+m mode "$mode_monitor"

set $mode_scrot Screenshot [f]ocused [s]elect [w]hole screen
mode "$mode_scrot" {
        bindsym --release f exec  "scrot -u Pictures/Screenshots/%Y-%m-%d_%H:%M:%S.png", mode "default"
        bindsym --release s exec --no-startup-id "scrot -s Pictures/Screenshots/%Y-%m-%d_%H:%M:%S.png", mode "default"
        bindsym --release w exec  "scrot Pictures/Screenshots/%Y-%m-%d_%H:%M:%S.png", mode "default"

        # Return to normal mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+s mode "$mode_scrot"

